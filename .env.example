# Gmail API Credentials (JSON format)
GMAIL_CREDENTIALS={"client_id":"...","client_secret":"...","token_uri":"..."}
GMAIL_TOKEN={"token":"...","refresh_token":"..."}

# Google Gemini API Key
GEMINI_API_KEY=AIza...

# Google Cloud Text-to-Speech Credentials (JSON format)
GOOGLE_TTS_CREDENTIALS={"type":"service_account","project_id":"..."}

# Recipient email for podcast delivery
RECIPIENT_EMAIL=your-email@gmail.com

# Optional: Gmail label to filter (default: newsletters-to-podcast)
NEWSLETTER_LABEL=newsletters-to-podcast

# Optional: TTS voice name (default: en-US-Neural2-J)
# Options: en-US-Neural2-J (male), en-US-Neural2-F (female)
TTS_VOICE_NAME=en-US-Neural2-J
